{% extends 'JTVCleanBundle::layout.html.twig' %}

{% block content1 %}
<h1>Notifies</h1>

<table>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Organization</th>
            <td>{{ entity.organization }}</td>
        </tr>
        <tr>
            <th>Dt</th>
            <td>{{ entity.dt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('notifies') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('notifies_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('notifies_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
