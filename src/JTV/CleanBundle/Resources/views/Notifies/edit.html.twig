<form action="{{ path('notifies_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul>
    <li>
        <a href="{{ path('notifies') }}">
            Back to the list
        </a>
    </li>
